{
    "coc.preferences.formatOnSaveFiletypes": [
        "cpp",
        "json"
    ],
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": [
                "--completion-style=detailed",
                "--function-arg-placeholders=0",
                "--header-insertion=never"
            ],
            "rootPatterns": [
                ".git"
            ],
            "requireRootPattern": true,
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    }
}
